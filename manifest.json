{
  "manifest_version": 3,
  "name": "Video Pro Plus",
  "version": "1.0",
  "description": "Bloqueador Universal de Anúncios em Vídeos",
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.twitter.com/*",
    "https://*.tiktok.com/*",
    "https://*.instagram.com/*",
    "https://*.facebook.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.twitter.com/*",
        "https://*.tiktok.com/*",
        "https://*.instagram.com/*",
        "https://*.facebook.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Pro Plus"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
